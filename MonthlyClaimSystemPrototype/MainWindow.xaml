<Window x:Class="MonthlyClaimSystemPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Claim System" Height="450" Width="800" Background="#FF2C3E50" FontFamily="Segoe UI">
    <Grid Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Submit Monthly Claim" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#FFCE93D8" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" />

            <!-- Month Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                <TextBlock Text="Month:" 
                           Width="120" 
                           VerticalAlignment="Center" 
                           Foreground="#FFCE93D8" 
                           FontWeight="SemiBold"
                           FontSize="16"/>
                <ComboBox Width="200" SelectedItem="{Binding NewClaim.Month}" FontSize="14" Padding="5">
                    <ComboBoxItem Content="January"/>
                    <ComboBoxItem Content="February"/>
                    <ComboBoxItem Content="March"/>
                    <ComboBoxItem Content="April"/>
                    <ComboBoxItem Content="May"/>
                    <ComboBoxItem Content="June"/>
                    <ComboBoxItem Content="July"/>
                    <ComboBoxItem Content="August"/>
                    <ComboBoxItem Content="September"/>
                    <ComboBoxItem Content="October"/>
                    <ComboBoxItem Content="November"/>
                    <ComboBoxItem Content="December"/>
                </ComboBox>
            </StackPanel>

            <!-- Amount Input -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,25" VerticalAlignment="Center">
                <TextBlock Text="Amount:" 
                           Width="120" 
                           VerticalAlignment="Center" 
                           Foreground="#FFCE93D8" 
                           FontWeight="SemiBold"
                           FontSize="16"/>
                <TextBox Width="200" Text="{Binding NewClaim.Amount}" FontSize="14" Padding="5" />
            </StackPanel>

            <!-- Submit Button -->
            <Button Content="Submit Claim" 
                    Width="150" 
                    Command="{Binding SubmitCommand}" 
                    Margin="0,0,0,20" 
                    Padding="8"
                    Background="#FF9C27B0" 
                    Foreground="#FFCE93D8" 
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#FF6A1B9A"
                    Cursor="Hand"
                    HorizontalAlignment="Left">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFBA68C8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF6A1B9A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Coordinator Dashboard Button -->
            <Button Content="Coordinator Dashboard"
                    Width="200" 
                    Margin="0,0,0,20"
                    Padding="8" 
                    Background="#FF607D8B" 
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderBrush="#FF455A64"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Click="OpenCoordinator_Click"/>

            <!-- Submitted Claims Header -->
            <TextBlock Text="Submitted Claims" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Foreground="#FFCE93D8" 
                       Margin="0,0,0,10" />

            <!-- Data Grid -->
            <DataGrid ItemsSource="{Binding Claims}" 
                      AutoGenerateColumns="True" 
                      Height="176"
                      Background="#FF34495E"
                      Foreground="#FFCE93D8"
                      RowBackground="#FF3E5369"
                      AlternatingRowBackground="#FF2E4053"
                      GridLinesVisibility="None"
                      FontSize="14"
                      BorderBrush="#FF2C3E50"
                      HorizontalGridLinesBrush="#FF1F2A38"
                      VerticalGridLinesBrush="#FF1F2A38"
                      />
        </StackPanel>
    </Grid>
</Window>
