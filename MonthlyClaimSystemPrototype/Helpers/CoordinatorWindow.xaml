<Window x:Class="MonthlyClaimSystemPrototype.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Dashboard" Height="400" Width="600">
    <Grid Background="#1E2A38">
        <DataGrid x:Name="dgClaims" ItemsSource="{Binding}" AutoGenerateColumns="True" Margin="10" SelectionChanged="dgClaims_SelectionChanged" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Approve" Width="100" Margin="10" Click="Approve_Click"/>
            <Button Content="Reject" Width="100" Margin="10" Click="Reject_Click"/>
        </StackPanel>
    </Grid>
</Window>
